#!/bin/bash
set -euo pipefail

# Usage: tmux-worktree <git-worktree-root>
# <git-worktree-root> is the bare repo (or directory containing worktrees/)

if [ $# -lt 1 ]; then
  echo "Usage: $(basename "$0") <git-worktree-root>" >&2
  exit 1
fi

GIT_ROOT=$1
WORKTREE_SEARCH_DIR="$GIT_ROOT/worktrees"

if [ ! -d "$GIT_ROOT" ]; then
  echo "Error: path '$GIT_ROOT' does not exist." >&2
  exit 1
fi

if [ ! -d "$WORKTREE_SEARCH_DIR" ]; then
  echo "Error: worktrees directory not found; git repo is not a bare repo." >&2
  exit 1
fi

# Check if TMUX_CONFIG is set
if [ -z "${TMUX_CONFIG:-}" ]; then
  echo "Error: TMUX_CONFIG is not set. Exiting." >&2
  exit 1
fi

# If already inside a tmux session, abort (must detach first)
if [ -n "${TMUX:-}" ]; then
  echo "Error: already inside a tmux session. Detach/exit tmux first." >&2
  exit 1
fi

# Build candidate list: existing worktree dirs + remote branch names
# Remote branches (strip origin/) plus local worktrees, remove duplicates
REMOTE_BRANCHES=$(git -C "$GIT_ROOT" for-each-ref --format='%(refname:strip=3)' refs/remotes/origin | grep -v '^HEAD$' || true)
EXISTING_DIRS=$(find "$WORKTREE_SEARCH_DIR" -mindepth 1 -maxdepth 1 -type d -exec basename {} \; | sed 's#^##')
CANDIDATES=$(printf '%s\n%s\n' "$EXISTING_DIRS" "$REMOTE_BRANCHES" | awk 'NF' | sort -u)

# Launch fzf; user may also type a new branch name not in list
RAW_SELECTION=$(printf '%s\n' "$CANDIDATES" | fzf --prompt="Select/create branch: " --print-query --preview='BR={}; echo "Worktree dir: $GIT_ROOT/${BR//\//_}"; git -C "$GIT_ROOT" log -1 --oneline origin/{} 2>/dev/null || echo "(no remote commit)"' --preview-window=up:5)
QUERY=$(printf '%s' "$RAW_SELECTION" | sed -n '1p')
CHOICE=$(printf '%s' "$RAW_SELECTION" | sed -n '$p')

# Determine intended branch name (prefer explicit choice; fallback to query)
if [ -n "$CHOICE" ] && printf '%s\n' "$CANDIDATES" | grep -Fxq "$CHOICE"; then
  BRANCH_NAME="$CHOICE"
else
  BRANCH_NAME="$QUERY"
fi

# Validate branch name
if [ -z "$BRANCH_NAME" ]; then
  echo "No input provided. Exiting." >&2
  exit 1
fi

# Map branch name to a session/worktree directory name (replace slashes)
SESSION_NAME=${BRANCH_NAME//\//_}
WORKTREE_PATH="$GIT_ROOT/$SESSION_NAME"

# Determine default branch dynamically
DEFAULT_BRANCH="${DEFAULT_BRANCH:-}"
if [ -z "$DEFAULT_BRANCH" ]; then
  if origin_head_ref=$(git -C "$GIT_ROOT" symbolic-ref --quiet refs/remotes/origin/HEAD 2>/dev/null); then
    DEFAULT_BRANCH=${origin_head_ref##*/}
  else
    remote_head=$(git -C "$GIT_ROOT" remote show origin 2>/dev/null | awk '/HEAD branch/ {print $NF}') || true
    if [ -n "${remote_head:-}" ]; then
      DEFAULT_BRANCH="$remote_head"
    elif git -C "$GIT_ROOT" show-ref --verify --quiet refs/heads/main; then
      DEFAULT_BRANCH=main
    else
      DEFAULT_BRANCH=master
    fi
  fi
fi

if [ -d "$WORKTREE_PATH" ]; then
  cd "$WORKTREE_PATH"
else
  cd "$GIT_ROOT"
  echo "Checking if branch exists on remote"
  if git ls-remote --exit-code --heads origin "$BRANCH_NAME" >/dev/null 2>&1; then
    git worktree add -b "$BRANCH_NAME" "$WORKTREE_PATH" "origin/$BRANCH_NAME"
  else
    echo "Branch does not exist on remote - adding new local worktree (base: $DEFAULT_BRANCH)"
    git worktree add "$WORKTREE_PATH" -b "$BRANCH_NAME" "$DEFAULT_BRANCH"
  fi
fi

if tmux has-session -t "$SESSION_NAME" 2>/dev/null; then
  tmux attach-session -t "$SESSION_NAME"
else
  tmux -f "$TMUX_CONFIG" new-session -s "$SESSION_NAME" -c "$WORKTREE_PATH"
fi
